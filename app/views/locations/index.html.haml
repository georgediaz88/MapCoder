- title "Locations"
= form_tag locations_path, :method => :get do
  %p
    = text_field_tag :search, params[:search]
    = submit_tag "Search Near", :name => nil
%table
  %tr
    %th Address
    %th Latitude
    %th Longitude
  - for location in @locations
    %tr{:id =>"location-#{location.id}"}
      %td= location.address
      %td= location.latitude
      %td= location.longitude
      %td= link_to "Show", location
      %td= link_to "Edit", edit_location_path(location)
      %td= link_to "Destroy", location, :confirm => 'Are you sure?', :method => :delete, :remote => true
%p= link_to "New Location", new_location_path
